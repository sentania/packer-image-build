#cloud-config
autoinstall:
  version: 1

  early-commands:
    # Workaround so Packer doesn't "timeout" on first SSH
    - systemctl stop ssh

  locale: en_US
  keyboard:
    layout: us

  packages:
    - openssh-server
    - open-vm-tools
    - cloud-init
    - ca-certificates

  write_files:
    # Persistently disable IPv6 (sysctl)
    - path: /etc/sysctl.d/99-disable-ipv6.conf
      owner: root:root
      permissions: '0644'
      content: |
        net.ipv6.conf.all.disable_ipv6=1
        net.ipv6.conf.default.disable_ipv6=1

    # Disable IPv6 at kernel boot (safer across reboots than only sysctl)
    - path: /etc/default/grub.d/99-ipv6.cfg
      owner: root:root
      permissions: '0644'
      content: |
        GRUB_CMDLINE_LINUX="$GRUB_CMDLINE_LINUX ipv6.disable=1"

  runcmd:
    - sysctl --system
    - update-grub

  # Netplan (single-layer "network" block)
  network:
    version: 2
    ethernets:
      ens192:
        dhcp4: true
        # dhcp6: false   # optional; sysctl/grub already disable IPv6

  identity:
    hostname: ubuntu-server
    username: labuser
    # SHA-512 hash (openssl passwd -6 ...)
    password: $6$GcokXb86Rt.azJEj$4zeQGtCXwY8hluxfdkhDARjOy98s4EoGGPRfWadZOXhz2qNkG0g0rKjBbZCuQsrJY/w/zxncMtteD0tHUZSXD0

  ssh:
    install-server: true
    allow-pw: true
    authorized-keys:
      - ssh-rsa  rsa-key-20250129

  storage:
    layout:
      name: lvm

  user-data:
    disable_root: false

  late-commands:
    - "echo 'labuser ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/labuser"
    - "curtin in-target --target=/target -- chmod 440 /etc/sudoers.d/labuser"
